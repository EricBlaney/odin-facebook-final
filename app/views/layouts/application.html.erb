<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to "Home", root_path, class: 'button is-link' %>
            <% if user_signed_in?%>
              <% if received_requests.any? %>
                <%= link_to "friend requests", friend_requests_path, class: 'button is-link' %>
              <% end %> 
                <%= link_to 'Edit user', edit_user_registration_path, class: 'button is-link' %>
                <%= link_to 'My Profile', user_path(current_user), class: 'button is-link' %>
            <% end %>
            <% if current_user %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button is-link' %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: 'button is-link' %>
              <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
